{
  "project": {
    "name": "diego-dev",
    "version": "1.0.0",
    "description": "Diego's Portable Dev Environment"
  },
  "paths": {
    "src": "src",
    "spec": "a_spec",
    "dist": "dist",
    "lib": "lib",
    "container": "src/container",
    "flake": "src/flake.nix",
    "log": "build.log"
  },
  "defaults": {
    "user": "diego",
    "host": "surface",
    "preset": "full",
    "container_runtime": "podman"
  },
  "hosts": {
    "surface": {
      "user": "diego",
      "preset": "full",
      "description": "Surface Pro 8 - Full development"
    },
    "desktop": {
      "user": "diego",
      "preset": "full",
      "description": "Desktop workstation"
    },
    "server": {
      "user": "diego",
      "preset": "server",
      "description": "Server/VPS - Cloud ops only"
    },
    "cli": {
      "user": "diego",
      "preset": "cli",
      "description": "CLI-only (no GUI apps)"
    },
    "minimal": {
      "user": "diego",
      "preset": "minimal",
      "description": "Minimal base development"
    }
  },
  "presets": {
    "full": ["shell-core", "dev-languages", "build-debug", "containers-cloud", "security-network", "data-science", "productivity", "media-graphics"],
    "cli": ["shell-core", "dev-languages", "build-debug", "containers-cloud", "security-network", "data-science"],
    "minimal": ["shell-core", "dev-languages", "build-debug"],
    "server": ["shell-core", "containers-cloud", "security-network"]
  },
  "profiles": {
    "1": { "name": "shell-core", "description": "CLI essentials: eza, bat, fd, fzf, ripgrep" },
    "2": { "name": "dev-languages", "description": "Rust, Go, Node, Python, C/C++" },
    "3": { "name": "build-debug", "description": "cmake, gdb, valgrind, shellcheck" },
    "4": { "name": "containers-cloud", "description": "podman, kubectl, terraform, aws/gcp" },
    "5": { "name": "security-network", "description": "nmap, wireguard, gnupg, tor" },
    "6": { "name": "data-science", "description": "pandas, torch, jupyter, postgres" },
    "7": { "name": "productivity", "description": "obsidian, libreoffice, taskwarrior" },
    "8": { "name": "media-graphics", "description": "ffmpeg, gimp, obs, mpv" }
  },
  "container": {
    "image_name": "diego-dev",
    "image_tag": "latest",
    "registry": "",
    "minimal_image": "diego-dev-minimal"
  },
  "distrobox": {
    "name": "diego-dev",
    "home": "/home/diego"
  }
}
